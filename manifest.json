{
  "manifest_version": 3,
  "name": "LLM Text Scraper",
  "version": "1.0.0",
  "description": "Extract and save webpage text content optimized for LLM consumption",
  
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "contextMenus"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LLM Text Scraper"
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  
  
  "web_accessible_resources": [
    {
      "resources": ["utils/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
